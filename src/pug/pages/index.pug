extends ../layout/main

block variables
  - var title = '';
  - var description = '';

block head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(name="description", content=description)
  title #{title}

block header
  include ../components/_header

block content
  .fullpage-container 
    .swiper-wrapper
      include ../components/index/_hero
      include ../components/index/_differ
      include ../components/index/_complex-solution
      include ../components/index/_case
    .swiper-pagination
  .overlay
block footer
  include ../components/_footer